<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HellcodeUltimate" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/hc_light_background</item>
        <item name="android:textColor">@color/hc_light_text_primary</item>
        <item name="colorPrimary">@color/hc_light_primary</item>
        <item name="colorPrimaryDark">@color/hc_light_primary_variant</item>
        <item name="colorAccent">@color/hc_light_secondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="o">@android:color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.HellcodeUltimate.NoActionBar" parent="Theme.HellcodeUltimate">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>